#! /usr/bin/env bash

# DESCRIPTION
# Installs applications.

# EXECUTION

# Amethyst
install_zip_app "$AMETHYST_APP_URL" "$AMETHYST_APP_NAME"

# App Cleaner
install_zip_app "$APP_CLEANER_APP_URL" "$APP_CLEANER_APP_NAME"

# Google Chrome
install_dmg_app "$CHROME_APP_URL" "$CHROME_VOLUME_NAME" "$CHROME_APP_NAME"

# iTerm
install_zip_app "$ITERM_APP_URL" "$ITERM_APP_NAME"

# PSequel
install_zip_app "$PSEQUEL_APP_URL" "$PSEQUEL_APP_NAME"

# Sublime Text
install_dmg_app "$SUBLIME_TEXT_APP_URL" "$SUBLIME_TEXT_VOLUME_NAME" "$SUBLIME_TEXT_APP_NAME"

# f.lux
install_zip_app "$FLUX_APP_URL" "$FLUX_APP_NAME"

# Spotify
install_zip_app "$SPOTIFY_APP_URL" "$SPOTIFY_APP_NAME"

# Now
install_zip_app "$NOW_APP_URL" "$NOW_APP_NAME"

# Cumulus
install_dmg_app "$CUMULUS_APP_URL" "$CUMULUS_APP_NAME"
